<h2>Edit <%= @child.name %></h2>

<form action="/child/<%= @child.slug%>" method="POST">
<input type="hidden" id="hidden" name="_method" value="patch">

    <label>Edit Name</label>
    <input type="text" value="<%= @child.name %>" name="name"><br><br>
    <label>Edit Date of Birth</label>
    <input type="date" value="<%= @child.dob %>" name="dob"><br><br>
    <button id="submit" type="submit">Edit</button>
</form>

<h2>Delete</h2>

<form action="/child/<%= @child.slug%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Child">
</form>